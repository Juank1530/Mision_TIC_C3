@page
@model ProyectoCiclo3.App.Frontend.Pages.EditRutaModel
@{
    var ruta = Model.Ruta;
}
 
<div class="text-center">
<form method="POST">
    <input type="number" class="form-control d-none" id="id" name="id" placeholder="id" asp-for="@ruta.id" readonly>
    <label for="origen" class="form-label">Origen</label>
    <input type="text" class="form-control" id="origen" name="origen" required placeholder="Origen" asp-for="@ruta.origen">
    <label for="destino" class="form-label">Destino</label>
    <input type="text" class="form-control" id="destino" name="destino" required placeholder="Destino" asp-for="@ruta.destino">
    <label for="tiempo_estimado" class="form-label">Tiempo Estimado</label>
    <input type="number" class="form-control" id="tiempo_estimado" name="tiempo_estimado" required placeholder="Tiempo Estimado" asp-for="@ruta.tiempo_estimado">
  <hr>
  <button type="submit" class="btn btn-success">Actualizar</button>
</form>
</div>